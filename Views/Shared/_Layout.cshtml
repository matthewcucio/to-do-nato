<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToDoNa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Todoapp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        .navbar-todona {
            background: linear-gradient(90deg, #2563eb 0%, #3b82f6 100%) !important;
            border-bottom: 2px solid #2563eb44;
            box-shadow: 0 4px 24px 0 #00000030;
        }

        .navbar-brand.todona-brand {
            color: #fff !important;
            font-weight: bold;
            font-size: 1.7rem;
            letter-spacing: 1px;
            text-shadow: 0 0 6px #2563eb88, 0 0 12px #2563eb44;
            transition: color 0.2s;
        }

            .navbar-brand.todona-brand:hover {
                color: #e0e7ef !important;
                text-shadow: 0 0 10px #3b82f6bb;
            }

        .navbar-nav .nav-link {
            color: #e0e7ef !important;
            font-weight: bold;
            font-size: 1.08rem;
            margin-right: 0.5rem;
            border-radius: 0.4rem;
            transition: background 0.2s, color 0.2s, box-shadow 0.2s;
        }

            .navbar-nav .nav-link.active, .navbar-nav .nav-link:focus, .navbar-nav .nav-link:hover {
                color: #fff !important;
                background: #2563eb55;
                box-shadow: 0 0 8px 1px #2563eb55;
            }

        .navbar-toggler {
            border-color: #fff;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255,255,255,0.7)' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-todona mb-3">
            <div class="container-fluid">
                <a class="navbar-brand todona-brand" asp-area="" asp-controller="Home" asp-action="Index">ToDoNa</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ToDoItemModels" ? "active" : "")"
                               asp-area="" asp-controller="ToDoItemModels" asp-action="Index">ToDo</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ToDoNa - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
</body>
</html>