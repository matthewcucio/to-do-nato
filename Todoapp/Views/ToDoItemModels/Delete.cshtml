@model Todoapp.Models.ToDoItemModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background: linear-gradient(135deg, #232526 0%, #414345 100%) !important;
        min-height: 100vh;
    }
</style>

<div class="min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-lg bg-dark text-light w-100" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="card-title text-center mb-4 text-danger">Delete</h1>
            <h3 class="text-center mb-4">Are you sure you want to delete this?</h3>
            <hr class="border-secondary" />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Status)
                </dd>
            </dl>
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg" style="transition: background 0.2s;">Delete</button>
                </div>
                <div class="mt-3 text-center">
                    <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>