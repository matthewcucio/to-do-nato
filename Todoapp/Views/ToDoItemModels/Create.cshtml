@model Todoapp.Models.ToDoItemModel

@{
    ViewData["Title"] = "Create";
}

<!-- Dark gradient background for the whole page -->
<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #232526 0%, #414345 100%);">
    <div class="card shadow-lg bg-dark text-light w-100" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="card-title text-center mb-4">Create</h1>
            <h4 class="text-center mb-4">Create a New Task</h4>
            <hr class="border-secondary" />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control bg-secondary text-light border-0" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" class="form-select bg-secondary text-light border-0" asp-items="Html.GetEnumSelectList<Todoapp.Models.Status>()"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Deadline" class="form-label">Deadline</label>
                    <input asp-for="Deadline" class="form-control bg-secondary text-light border-0" type="datetime-local" />
                    <span asp-validation-for="Deadline" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control bg-secondary text-light border-0"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg" style="transition: background 0.2s;">
                        Create
                    </button>
                </div>
            </form>
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}