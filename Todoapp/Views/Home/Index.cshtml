@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background: url('/images/HomePage2.svg') no-repeat center center;
        background-size: cover, cover;
        background-attachment: scroll;
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .overlay {
        
        min-height: 100vh;
        width: 100%;
        display: flex;
        flex-direction: column;
    }

    .content {
        flex: 1;
        display: flex;
        padding: 2rem 4rem;
        justify-content: space-between;
        align-items: center;
    }

    .left-section {
        max-width: 50%;
    }

    .right-section {
        max-width: 40%;
    }

    h1 {
        font-size: 5rem;
        font-weight: 800;
        margin: 0;
        text-shadow: 0 0 12px #2563eb88, 0 0 32px #2563eb33;
    }
    

    .tagline {
        font-size: 1.25rem;
        margin-top: 1rem;
        color: #cbd5e1;
    }

    .description {
        font-size: 1.1rem;
        margin-top: 2rem;
        color: white;
        line-height: 1.6;
    }

    .btn-blue {
        display: inline-block;
        margin-top: 2rem;
        background-color: #2563eb;
        color: white;
        font-weight: bold;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 0.375rem;
        text-decoration: none;
        transition: background-color 0.2s, box-shadow 0.2s;
        box-shadow: 0 0 8px 2px #2563eb55;
        outline: none;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

        .btn-blue:hover,
        .btn-blue:focus {
            background-color: #3b82f6;
            box-shadow: 0 0 16px 4px #3b82f6bb;
            color: #fff;
        }

    .footer {
        text-align: center;
        padding: 1rem;
        font-size: 0.9rem;
        color: #9ca3af;
        margin-top: auto;
    }
</style>

<div class="overlay">
    <div class="content">
        <div class="left-section">
            <p>Welcome to</p>
            <h1>ToDoNa</h1>
            <hr style="border: 1px solid #2563eb; width: 80px; margin: 1rem 0;">
            <div class="tagline">"Todo na!" or "Lock in!" – It's time to go ALL IN and get things done.</div>
        </div>
        <div class="right-section">
            <div class="description">
                ToDoNa is your ultimate personal productivity assistant — designed to help you organize your tasks, stay on top of deadlines, and never miss a thing.
            </div>
            <a asp-controller="ToDoItemModels" asp-action="Index" class="btn-blue">GO TO YOUR LIST</a>
        </div>
    </div>
</div>